[Unit]
Description=Airflow celery flower daemon
After=network.target
After=systemd-user-sessions.service
After=network-online.target
After=airflow-worker.service

[Service]
EnvironmentFile=/etc/sysconfig/airflow
User=airflow
Group=airflow
Type=simple
ExecStart=/usr/bin/bash -c 'source /opt/anaconda38/bin/activate ; airflow celery flower'
Restart=on-failure
RestartSec=10s

[Install]
WantedBy=multi-user.target

