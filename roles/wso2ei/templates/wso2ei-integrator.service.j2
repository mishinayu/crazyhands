[Unit]
Description=WSO2 Enterprise Integrator - Integrator
After=network.target

[Service]
ExecStart={{ ei_home }}/bin/ei.sh start
ExecStop={{ ei_home }}/bin/ei.sh stop
ExecRestart={{ ei_home }}/bin/ei.sh restart
PIDFile={{ ei_home }}/wso2carbon.pid
User={{ wso2_user }}
Group={{ wso2_group }}
Type=forking
Restart=on-failure
RestartSec=5
StartLimitInterval=60s
StartLimitBurst=3

[Install]
WantedBy=multi-user.target

