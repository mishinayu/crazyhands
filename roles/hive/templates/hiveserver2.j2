[Unit]
Description=Apache Hive hiveserver2
After=network.target
After=systemd-user-sessions.service
After=network-online.target

[Service]
User=hadoop
Type=forking
ExecStart={{ hive_home }}/bin/start-hive.sh start
ExecStop={{ hive_home }}/bin/start-hive.sh stop
TimeoutSec=30
Restart= on-failure
RestartSec= 30
StartLimitInterval=350
StartLimitBurst=10

[Install]
WantedBy=multi-user.target

